{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@*": ["./src/*"]
        }
    },
    "files": ["./@types/express/index.d.ts", "./environment.d.ts"],
    "include": ["./src/"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
